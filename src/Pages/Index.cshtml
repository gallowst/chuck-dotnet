@page
@model IndexModel
@using System.Net.Http
@using System.Text.Json.Nodes

@{
    ViewData["Title"] = "Chuck Norris";
}

@{
    var client = new HttpClient();
    var result = await client.GetStringAsync("https://api.chucknorris.io/jokes/random?category=dev");
    var result2 = await client.GetStringAsync("https://api.chucknorris.io/jokes/random?category=science");
    var result3 = await client.GetStringAsync("https://api.chucknorris.io/jokes/random?category=history");
    var jsonString = result.ToString();
    var jsonString2 = result2.ToString();
    var jsonString3 = result3.ToString();

    // Joke 1
    JsonNode jokeNode = JsonNode.Parse(jsonString)!;
    // Use the Value Node to display the Joke
    var joke = (jokeNode!["value"]);
    // Joke 2
    JsonNode jokeNode2 = JsonNode.Parse(jsonString2)!;
    var joke2 = (jokeNode2!["value"]);
    // Joke 3
    JsonNode jokeNode3 = JsonNode.Parse(jsonString3)!;
    var joke3 = (jokeNode3!["value"]);

}
<div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true"
            aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885_1280.jpg" class="d-block w-100"
                alt="Dev">
            <div class="container">
                <div class="carousel-caption text-start">
                    <h6>@(joke)</h6>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://cdn.pixabay.com/photo/2016/10/20/18/35/earth-1756274_1280.jpg" class="d-block w-100"
                alt="Science">
            <div class="container">
                <div class="carousel-caption text-start">
                    <h6>@(joke2)</h6>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://cdn.pixabay.com/photo/2018/08/14/13/23/ocean-3605547_1280.jpg" class="d-block w-100"
                alt="History">
            <div class="container">
                <div class="carousel-caption text-start">
                    <h6>@(joke3)</h6>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


</div><!-- /.container -->
